{% block _product_products_tags_items_widget %}
    {{ dump(\) }}
    {% for key, tag in tags.getTree() %}
        <div class="form-group row">
            <label for="tag{{ tag.id }}" class="col-sm-2 col-form-label">{{ tag.name }}</label>
            <div class="col-sm-10">
                <select id="tag{{ tag.id }}" {% if tag.getInputType() == 'multiple' %}multiple="multiple"{% endif %} type="{{ tag.getInputType() }}" name="tag_{{ tag.id }}[]" class="select2 form-control">
                    {% for key_tag_item, tag_item in tag.getProductTagItems() %}
                        <option></option>
                        {#<option value="{% if tag.id in productTags|keys %}asdfasdf{% endif %}" {% if tag_item.id in currentTags %} selected {% endif %}>{{ tag_item.name }}</option>#}
                    {% endfor %}
                </select>
            </div>
        </div>
    {% endfor %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('.select2[type=once]').select2();
            $('.select2[type=multiple]').select2({multiple:1});
        });
    </script>
{% endblock %}